@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Person Quick Add</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@Person" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="lastName">Last name: </label>
                            <InputText id="lastName" class="form-control" @bind-Value="@Person.LastName" placeholder="Enter last name"></InputText>
                            <ValidationMessage For="@(() => Person.LastName)" />
                        </div>

                        <div class="form-group">
                            <label for="firstName">First name: </label>
                            <InputText id="firstName" class="form-control" @bind-Value="@Person.FirstName" placeholder="Enter first name"></InputText>
                            <ValidationMessage For="@(() => Person.FirstName)" />
                        </div>

                        <div class="form-group">
                            <label for="firstName">Birthday: </label>
                            <InputDate id="birthday" class="form-control" @bind-Value="@Person.Birthday" placeholder="Enter birthday"></InputDate>
                            <ValidationMessage For="@(() => Person.Birthday)" />
                        </div>

                        <div class="form-group">
                            <label for="phonePrimary">Phone: </label>
                            <InputText id="phonePrimary" class="form-control" @bind-Value="@Person.PhonePrimary" placeholder="Enter primary phone number"></InputText>
                        </div>

                        <div class="form-group">
                            <label for="email">Email: </label>
                            <InputText id="email" class="form-control" @bind-Value="@Person.EmailPrimary" placeholder="Enter email"></InputText>
                            <ValidationMessage For="@(() => Person.EmailPrimary)" />
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}