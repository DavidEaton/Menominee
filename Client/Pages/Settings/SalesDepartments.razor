<style>
    .cards {
        display: grid;
        /*grid-template-columns: repeat(auto-fill, minmax(230px, 1fr));*/
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 1rem;
    }

    .card {
        display: grid;
        /*grid-template-rows: max-content 200px 1fr;*/
    }

    @@media (max-width:768px) {
        .cards {
            grid-template-columns: repeat(1, 1fr);
        }
    }
</style>