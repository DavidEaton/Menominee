{
  "ApiBaseUrl": "https://menominee-api.azurewebsites.net/api",
  "Clients": {
    "AllowedOrigins": "https://menominee.azurewebsites.net/"
  },
  "ConnectionStrings": {
    "Idp": "Azure Secret"
  },
  "DatabaseSettings": {
    "Server": {
      "Name": "Azure Secret",
      "Password": "Azure Secret",
      "UserName": "Azure Secret"
    },
    "Tenant": {
      "Name": "Menominee" // Production tenant name can be found in JWT claims; Development default tenant name is Menominee.
    }
  },
  "IDPSettings": {
    "BaseUrl": "https://menominee-idp.azurewebsites.net/"
  },
  "Logging": {
    "LogLevel": {
      "Microsoft.AspNetCore": "Error",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "OidcConfiguration": {
    "Authority": "https://menominee-idp.azurewebsites.net",
    "PostLogoutRedirectUri": "https://menominee.azurewebsites.net/authentication/logout-callback",
    "RedirectUri": "https://menominee.azurewebsites.net/authentication/login-callback"
  }
}