@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Add Organization</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (@OrganizationAdd != null)
                    {
                        <EditForm Model="@OrganizationAdd" OnValidSubmit="@HandleValidSubmit">
                            <DataAnnotationsValidator />

                            <OrganizationNameForm @ref="OrganizationNameForm"
                                                  CloseEventCallback="@OrganizationNameForm_OnOrganizationNameChanged">
                            </OrganizationNameForm>

                            <AddressForm @ref="AddressForm"
                                         CloseEventCallback="@AddressForm_OnAddressChanged">
                            </AddressForm>

                            <div class="form-group">
                                <label for="note">Notes: </label>
                                <InputTextArea id="note"
                                               class="form-control"
                                               @bind-Value="@OrganizationAdd.Note"
                                               placeholder="Optional notes">
                                </InputTextArea>
                                <ValidationMessage For="@(() => OrganizationAdd.Note)" />
                            </div>

                            @*
                                <div class="form-group">
                                    <label for="phonePrimary">Phone: </label>
                                    <InputText id="phonePrimary" class="form-control" @bind-Value="@Organization.Name.PhonePrimary" placeholder="Enter primary phone number"></InputText>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email: </label>
                                    <InputText id="email" class="form-control" @bind-Value="@Organization.EmailPrimary" placeholder="Enter email"></InputText>
                                    <ValidationMessage For="@(() => Organization.EmailPrimary)" />
                                </div>
                            *@

                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                            <label class="float-right alert-danger">@Message</label>
                            <div>
                                <label class="font-italic small">*Required</label>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
}