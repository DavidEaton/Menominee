<TelerikButton OnClick="@(() => Save.InvokeAsync())"
               ThemeColor="primary"
               ButtonType="ButtonType.Button"
               Icon="check"
               Enabled="EnableSave"
               Class="dialog-button"
               title="Save">
    Save
</TelerikButton>

<TelerikButton Icon="x"
               OnClick="@(() => Close.InvokeAsync())"
               Class="dialog-button"
               title="Cancel/Close">
    Close
</TelerikButton>
<style>
    .dialog-button {
        margin-right: 0.7rem;
    }
</style>