<TelerikButton OnClick="Save"
               Primary="true"
               Icon="save"
               Enabled="EnableSave"
               title="Save">
    Save
</TelerikButton>

<TelerikButton Icon="x"
               OnClick="Close"
               title="Cancel and Close">
    Close
</TelerikButton>

@code {
    [Parameter]
    public EventCallback Close { get; set; }

    [Parameter]
    public EventCallback Save { get; set; }

    [Parameter]
    public bool EnableSave { get; set; }
}