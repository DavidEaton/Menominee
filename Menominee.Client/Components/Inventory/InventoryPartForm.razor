<div class="m-form">
    <Card Title="Edit Item">
        <Content>
            <div class="form-row">
                <div class="form-group col col-12 col-md-7 col-lg-6">
                    @if (Manufacturers != null)
                    {
                        <label class="k-label" for="category">Manufacturer</label>
                        <TelerikDropDownList @bind-Value="@Item.ManufacturerId"
                                             Width="100%"
                                             Data="@Manufacturers"
                                             TextField="DisplayText"
                                             ValueField="Id"
                                             Class="form-control"
                                             OnChange="OnManufacturerChangeAsync"
                                             Id="category">
                        </TelerikDropDownList>
                    }
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col col-12 col-md-6">
                    @if (ProductCodes != null)
                    {
                        <label class="k-label" for="productCode">Product Line</label>
                        <SfDropDownList TValue="long"
                                        TItem="ProductCodeToReadInList"
                                        PopupHeight="230px"
                                        Placeholder="Select a product line"
                                        DataSource="@ProductCodes"
                                        @bind-Value="@Item.ProductCodeId">
                            <DropDownListFieldSettings Text="DisplayText" Value="Id" />
                            <DropDownListEvents TItem="ProductCodeToReadInList" TValue="long" ValueChange="@OnProductCodeChange"></DropDownListEvents>
                        </SfDropDownList>
                        @*<TelerikDropDownList @bind-Value="@Item.ProductCodeId"
                                                 Width="100%"
                                                 Data="@ProductCodes"
                                                 TextField="DisplayText"
                                                 ValueField="Id"
                                                 OnChange="OnProductCodeChange"
                                                 @ref="productCodeDropDownRef"
                                                 Id="productCode">
                            </TelerikDropDownList>*@
                    }
                </div>
                <div class="form-group col col-12 col-md-6">
                    <label for="saleCode">Sale Code</label>
                    <input type="text" class="form-control" id="saleCode" readonly @bind-value="SaleCode">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col col-12 col-md-6">
                    <label for="partNumber">Part Number</label>
                    <input type="text" class="form-control m-uppercase" id="partNumber" autocomplete="off" @bind-value="Item.ItemNumber">
                </div>
                <div class="form-group col col-12 col-md-6">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" autocomplete="off" @bind-value="Item.Description">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col">
                    <SfTab ShowCloseButton="false" OverflowMode="OverflowMode.Scrollable" HeaderPlacement="HeaderPosition.Top" CssClass="e-background m-tab-height m-tabs">
                        <TabAnimationSettings>
                            <TabAnimationPrevious Effect="AnimationEffect.None"></TabAnimationPrevious>
                            <TabAnimationNext Effect="AnimationEffect.None"></TabAnimationNext>
                        </TabAnimationSettings>
                        <TabItems>
                            <TabItem CssClass="m-tab-item">
                                <ChildContent>
                                    <TabHeader Text="Pricing"></TabHeader>
                                </ChildContent>
                                <ContentTemplate>
                                    @if (Item.Part != null)
                                    {
                                        <div class="m-tab-content-border">
                                            <div class="m-tab-content">
                                                <div class="field">
                                                    <div>
                                                        <label class="col-form-label">List Price</label>
                                                    </div>
                                                    <TelerikNumericTextBox @bind-Value="Item.Part.List"
                                                                           Format="C"
                                                                           Arrows="false"
                                                                           Width="20%">
                                                    </TelerikNumericTextBox>
                                                </div>
                                                <div class="field">
                                                    <div>
                                                        <label class="col-form-label">Retail Price</label>
                                                    </div>
                                                    <TelerikNumericTextBox @bind-Value="Item.Part.Retail"
                                                                           Format="C"
                                                                           Arrows="false"
                                                                           Width="20%">
                                                    </TelerikNumericTextBox>
                                                </div>
                                                <div class="field">
                                                    <div>
                                                        <label class="col-form-label">Cost</label>
                                                    </div>
                                                    <TelerikNumericTextBox @bind-Value="Item.Part.Cost"
                                                                           Format="C"
                                                                           Arrows="false"
                                                                           Width="20%">
                                                    </TelerikNumericTextBox>
                                                </div>
                                                <div class="field">
                                                    <div>
                                                        <label class="col-form-label">Core</label>
                                                    </div>
                                                    <TelerikNumericTextBox @bind-Value="Item.Part.Core"
                                                                           Format="C"
                                                                           Arrows="false"
                                                                           Width="20%">
                                                    </TelerikNumericTextBox>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </ContentTemplate>
                            </TabItem>
                            <TabItem CssClass="m-tab-item">
                                <ChildContent>
                                    <TabHeader Text="Usage"></TabHeader>
                                </ChildContent>
                                <ContentTemplate>
                                    <div class="m-tab-content-border">
                                        <div class="m-tab-content">
                                            <div class="field">
                                                <div class="field">
                                                    <div>
                                                        <label class="col-form-label">On Hand</label>
                                                    </div>
                                                    @*<TelerikNumericTextBox @bind-Value="Item.QuantityOnHand"
                                                                               Decimals="2"
                                                                               Arrows="false"
                                                                               Width="20%">
                                                        </TelerikNumericTextBox>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </ContentTemplate>
                            </TabItem>
                        </TabItems>
                    </SfTab>
                </div>
            </div>

            <SaveDiscardButtons OnSave="@OnValidSubmit" OnDiscard="@OnDiscard" />

        </Content>
    </Card>
</div>

