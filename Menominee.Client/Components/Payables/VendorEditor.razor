@using Menominee.Client.Components.Shared

<div class="form m-form">
    <ContentHeader Header="@Title" />

    <div class="form-group">
        <div>
            <label class="m-label" for="vendorCode">ID</label>
        </div>
        <TelerikTextBox @bind-Value="Vendor.VendorCode"
                        MaxLength="10"
                        Width="175px"
                        Id="vendorCode">
        </TelerikTextBox>
    </div>
    <div class="form-group">
        <label class="m-label">Name</label>
        <TelerikTextBox @bind-Value="Vendor.Name"
                        Width="100%">
        </TelerikTextBox>
    </div>

    <div class="contact-info">
        <div>
            <Card Title="Address" Collapsible="true" Collapsed="false">
                <Content>
                    <AddressEditor Address="@Vendor?.Address"
                                   Enabled="true"
                                   FormMode="FormMode" />
                </Content>
            </Card>
        </div>
        <div>
            <Card Title="Phones" Collapsible="true" Collapsed="false">
                <Content>
                    Placeholder...
                </Content>
            </Card>
        </div>
        <div>
            <Card Title="Emails" Collapsible="true" Collapsed="false">
                <Content>
                    Placeholder...
                </Content>
            </Card>
        </div>
    </div>

    <SaveDiscardButtons OnSave="@OnValidSubmit" OnDiscard="@OnDiscard" />
</div>

<style>
    .contact-info {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        grid-gap: .8rem;
        margin-right: 5px;
    }

    @@media (max-width:992px) {
        .contact-info {
            grid-template-columns: 1fr;
        }
    }
</style>
