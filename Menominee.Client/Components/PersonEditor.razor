<EditForm Model="Person">
    <PersonNameEditor TItem="PersonNameToWrite"
                      Item="@Person.Name"
                      FirstNameProperty="FirstName"
                      MiddleNameProperty="MiddleName"
                      LastNameProperty="LastName" />

    <div class="m-form-control-group">
        <label for="state" class="form-control-label">Gender</label>
        <TelerikComboBox Data="GenderEnumData"
                         TextField="DisplayText"
                         ValueField="Value"
                         @bind-Value="@Person.Gender"
                         Width="100%"
                         ClearButton="false"
                         Placeholder="Select a Gender"
                         Enabled="EnableEditor">
        </TelerikComboBox>
    </div>
    <div class="m-form-control-group">
        <label for="note" class="form-control-label">Birthday</label>
        <TelerikDateInput @bind-Value="@Person.Birthday"
                          Width="100%">
        </TelerikDateInput>
    </div>
</EditForm>
