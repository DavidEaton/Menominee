@using Telerik.Blazor.Components
@using Syncfusion.Blazor.DropDowns

<TelerikWindow Visible="true"
               Modal="true"
               Width="500px"
               Class="popupWindowClass">
    <WindowTitle>
        @Title
    </WindowTitle>
    <WindowContent>
			<div class="form-row">
				<div class="form-group col col-12">
					<label class="k-label" for="name">Name</label>
					<input type="text" class="form-control" id="name" autocomplete="off" @bind-value="CreditCard.Name">
				</div>
			</div>

			<div class="form-row">
				<div class="form-group col col-12 col-md-4">
					@if (feeTypeList != null)
					{
						<label class="k-label" for="feeType">Fee Type</label>
						<SfDropDownList TValue="CreditCardFeeType"
									TItem="FeeTypeListItem"
									PopupHeight="230px"
									DataSource="@feeTypeList"
                                    Width="140px"
									@bind-Value="@CreditCard.FeeType">
							<DropDownListFieldSettings Text="Text" Value="Value" />
						</SfDropDownList>
					}
				</div>
				<div class="form-group col col-12 col-md-3">
					@if (CreditCard.FeeType == CreditCardFeeType.Flat)
					{
						<label class="k-label" for="flatFee">Amount</label>
						<TelerikNumericTextBox @bind-Value="CreditCard.Fee"
										   Format="C"
										   Id="flatFee"
										   Arrows="false">
						</TelerikNumericTextBox>

					}
					else if (CreditCard.FeeType == CreditCardFeeType.Percentage)
					{
						<label class="k-label" for="feePercent">Percentage</label>
						<TelerikNumericTextBox @bind-Value="CreditCard.Fee"
										   Format="#.000"
										   Id="feePercent"
										   Arrows="false">
						</TelerikNumericTextBox>

					}
				</div>
			</div>

			<div class="form-row">
				<div class="form-group col col-12">
					<TelerikCheckBox Id="deposit" @bind-Value="CreditCard.IsAddedToDeposit" />
					<label class="k-label" for="deposit">Add To Deposit</label>
				</div>
			</div>

			<SaveDiscardButtons OnSave="@OnSave" OnDiscard="@OnCancel" />

    </WindowContent>
</TelerikWindow>

