@page "/persons"

@if (PersonsList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="d-flex flex-row pt-5">
        <div class="d-flex flex-row">
            <table class="table table-responsive table-striped small">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Birthday</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var person in PersonsList)
                    {
                        <tr @onclick="@(e => SetSelectedId(person.Id))">
                            <td>@person.Name</td>
                            <td>@person.AddressFull</td>
                            <td>@(person.Birthday.HasValue ? person.Birthday.Value.ToString("MMMM dd, yyyy") : "")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="flex-fill">
            @*<PersonDetail @ref="PersonDetail" Id="@SelectedId"></PersonDetail>*@
        </div>
    </div>
    <div class="d-flex flex-row w-25">
        <button @onclick="AddPerson" class="btn btn-primary">
            <span class="oi oi-plus" aria-hidden="true"></span>
        </button>
    </div>
    <AddPersonDialog @ref="AddPersonDialog" CloseEventCallback="@AddPersonDialog_OnDialogClose"></AddPersonDialog>
}
