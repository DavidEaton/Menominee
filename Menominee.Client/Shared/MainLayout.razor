@layout TelerikLayout
@inherits LayoutComponentBase
<TelerikRootComponent>
    <div class="site">
        <div class="flex-container">
            <Header />
        </div>
        <div class="flex-container">
            <NavMenu />
        </div>
        <div class="flex-container">
            @Body
        </div>
    </div>
</TelerikRootComponent>

<style>
    .site {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
        background-color: powderblue;
    }

    .flex-container {
        display: flex;
        flex-wrap: wrap;
    }
</style>
