@using CustomerVehicleManagement.Shared
<ul class="flex-column">
    <li class="ml-3 mt-3 mr-3">
        <NavLink href="" Match="NavLinkMatch.All">
            <span class="oi oi-home" aria-hidden="true"></span> Home
        </NavLink>
    </li>
    <AuthorizeView>
        <Authorized>
            <li class="ml-3 mt-3 mr-3">
                <NavLink href="persons">
                    <span class="oi oi-list" aria-hidden="true"></span> Persons
                </NavLink>
            </li>
            <li class="ml-3 mt-3 mr-3">
                <NavLink href="organizations">
                    <span class="oi oi-list" aria-hidden="true"></span> Organizations
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Policy="@Policies.CanManageUsers">
        <Authorized>
            <li class="ml-3 mt-3 mr-3">
                <NavLink href="users">
                    <span class="oi oi-people" aria-hidden="true"></span> Users
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Policy="@Policies.TechniciansUser">
        <Authorized>
            <li class="ml-3 mt-3 mr-3">
                <NavLink href="technicians">
                    <span class="oi oi-cog" aria-hidden="true"></span> Technicians
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Policy="@Policies.CanManageHumanResources">
        <Authorized>
            <li class="ml-3 mt-3 mr-3">
                <NavLink href="employees">
                    <span class="oi oi-cog" aria-hidden="true"></span> Employees
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>
</ul>

<style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        background-color: khaki;
        height: 100%; /* Full height */
        position: fixed; /* Make it stick, even on scroll */
        overflow: auto; /* Enable scrolling if the sidenav has too much content */
    }

    li a {
        display: block;
    }

    .inline {
        display: inline;
    }

    .p-top-3 {
        margin-top: 1em;
    }
</style>