<TelerikWindow Visible="Visible"
               Modal="true">
    <WindowTitle>
        Address
    </WindowTitle>
    <WindowContent>

        <AddressEditor Address="Address"
                       Cancel="Cancel"
                       Ok="Ok"
                       Enabled="Enabled"/>
        @if (Enabled)
        {
            <TelerikButton OnClick="Ok"
                           Icon="check"
                           Primary="true"
                           ButtonType="ButtonType.Button"
                           title="Save Address">
                Ok
            </TelerikButton>
            <TelerikButton OnClick="Cancel"
                           ButtonType="ButtonType.Button"
                           Icon="x"
                           title="Cancel Edits">
                Cancel
            </TelerikButton>
        }
    </WindowContent>
</TelerikWindow>

@code {

    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public AddressToWrite Address { get; set; }

    [Parameter]
    public EventCallback Ok { get; set; }

    [Parameter]
    public EventCallback Cancel { get; set; }

    [Parameter]
    public bool Enabled { get; set; }

}