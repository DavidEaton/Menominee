<div class="container">
    <div class="form-group row">
        <div class="d-flex flex-column">
            <label for="address" class="form-control-label">Street</label>
            <TelerikTextBox @bind-Value="Address.AddressLine"
                            Id="address"
                            Width="100%"
                            Enabled="Enabled"
                            OnBlur="@(() => Updated.InvokeAsync())"/>
            <TelerikValidationMessage For="@(() => Address.AddressLine)" />
        </div>
    </div>
    <div class="form-group row">
        <div class="d-flex flex-column">
            <label for="city" class="form-control-label">City</label>
            <TelerikTextBox @bind-Value="Address.City"
                            Id="city"
                            Width="100%"
                            Enabled="Enabled"
                            OnBlur="@(() => Updated.InvokeAsync())"/>
            <TelerikValidationMessage For="@(() => Address.City)" />
        </div>
    </div>

    <div class="form-group row">
        <div class="d-flex flex-column">
            <label for="state" class="form-control-label">State</label>
            <TelerikComboBox Data="StateEnumData"
                             Id="state"
                             TextField="DisplayText"
                             ValueField="Value"
                             @bind-Value="Address.State"
                             Width="100%"
                             Filterable="true"
                             ClearButton="false"
                             Placeholder="Select a State"
                             Enabled="Enabled"
                             OnBlur="@(() => Updated.InvokeAsync())"/>
            <TelerikValidationMessage For="@(() => Address.State)" />
        </div>
    </div>

    <div class="form-group row">
        <div class="d-flex flex-column">
            <label for="postalCode" class="form-control-label">Postal Code</label>
            <TelerikTextBox @bind-Value="Address.PostalCode"
                            Id="postalCode"
                            Width="100%"
                            Enabled="Enabled"
                            OnBlur="@(() => Updated.InvokeAsync())"/>
            <TelerikValidationMessage For="@(() => Address.PostalCode)" />
        </div>    </div>
</div>