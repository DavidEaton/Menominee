<EditForm Model="EmailToWrite">
    <TelerikWindow Visible="true"
                   Modal="true">
        <WindowTitle>
            Email
        </WindowTitle>
        <WindowContent>
            <div class="container">
                <div class="form-group row">
                    <label class="form-control-label">Address</label>
                    <TelerikTextBox @bind-Value="@EmailToWrite.Address"
                                    Width="100%">
                    </TelerikTextBox>
                </div>
                <div class="form-group row">
                    <label>
                        <TelerikCheckBox @bind-Value="@EmailToWrite.IsPrimary"></TelerikCheckBox>
                        <span class="form-control-label">Primary</span>
                    </label>
                </div>
                <div>
                    <TelerikButton OnClick="Saved"
                                   Icon="check"
                                   ButtonType="ButtonType.Button"
                                   Primary="true"
                                   title="Save New Email">
                        Ok
                    </TelerikButton>
                    <TelerikButton OnClick="Cancelled"
                                   Icon="x"
                                   ButtonType="ButtonType.Button"
                                   title="Cancel Edit Email">
                        Cancel
                    </TelerikButton>
                </div>
            </div>
        </WindowContent>
    </TelerikWindow>
</EditForm>