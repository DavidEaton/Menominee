@typeparam TItem

<div class="form-group row">
    <label for="name" class="col-form-label">Name</label>
    <TelerikTextBox @bind-Value="Name"
                    Width="100%">
    </TelerikTextBox>
    <TelerikValidationMessage For="@(() => Name)" />
</div>
<div class="form-group row">
    <label for="note" class="col-form-label">Notes</label>
    <TelerikTextBox @bind-Value="Note"
                    Width="100%">
    </TelerikTextBox>
    <TelerikValidationMessage For="@(() => Note)" />
</div>