@page "/organizations"

<div class="container">
    <div class="h5">Organizations</div>

    @if (OrganizationsList == null)
    {
        @if (!EditingOrganization && !AddingOrganization)
        {
            <p><em>Loading...</em></p>
        }
    }
    @if (!EditingOrganization && !AddingOrganization && OrganizationsList != null)
    {
        <TelerikButton OnClick="Add"
                       Primary="true"
                       Icon="plus"
                       title="Add New Organization">
            Add Organization
        </TelerikButton>

        <table class="table table-hover table-responsive table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Primary Phone</th>
                    <th>Type</th>
                    <th>Primary Email</th>
                    <th>Note</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var organization in OrganizationsList)
                {
                    <OrganizationsIndexRow @key="organization" Organization="organization" OnRowClick="EditAsync"></OrganizationsIndexRow>
                }
            </tbody>
        </table>

    }

    @if (AddingOrganization && OrganizationToAdd != null)
    {
        <EditForm Model="@OrganizationToAdd">
            <OrganizationEditor TItem="OrganizationToAdd"
                                Item="@OrganizationToAdd"
                                NameProperty="Name"
                                NoteProperty="Note" />

            <TelerikGridLayout>
                <GridLayoutColumns>
                    <GridLayoutColumn Width="30%"></GridLayoutColumn>
                    <GridLayoutColumn Width="35%"></GridLayoutColumn>
                    <GridLayoutColumn Width="35%"></GridLayoutColumn>
                </GridLayoutColumns>
                <GridLayoutRows>
                    <GridLayoutRow></GridLayoutRow>
                </GridLayoutRows>
                <GridLayoutItems>
                    <GridLayoutItem>
                        <div class="h6">Address</div>
                        @if (OrganizationToAdd?.Address != null)
                        {
                            <TelerikWindow Visible="OrganizationToAdd?.Address != null && AddingAddress"
                                           Modal="true">
                                <WindowTitle>
                                    Address
                                </WindowTitle>
                                <WindowContent>
                                    <AddressEditor TItem="AddressToAdd"
                                                   Item="@OrganizationToAdd?.Address"
                                                   AddressLineProperty="AddressLine"
                                                   CityProperty="City"
                                                   StateProperty="State"
                                                   PostalCodeProperty="PostalCode"
                                                   EnableEditor="true" />

                                    <TelerikButton OnClick="() => AddingAddress = false"
                                                   Icon="check"
                                                   Primary="true"
                                                   ButtonType="ButtonType.Button"
                                                   title="Save New Address">
                                        Okay
                                    </TelerikButton>
                                    <TelerikButton OnClick="CancelAddAddress"
                                                   ButtonType="ButtonType.Button"
                                                   Icon="x"
                                                   title="Cancel New Address">
                                        Cancel
                                    </TelerikButton>
                                </WindowContent>
                            </TelerikWindow>
                            @if (OrganizationToAdd?.Address != null && !AddingAddress)
                            {
                                <AddressEditor TItem="AddressToAdd"
                                               Item="@OrganizationToAdd?.Address"
                                               AddressLineProperty="AddressLine"
                                               CityProperty="City"
                                               StateProperty="State"
                                               PostalCodeProperty="PostalCode"
                                               EnableEditor="false" />
                            }
                        }
                        else
                        {
                            <TelerikButton OnClick="AddAddress"
                                           Icon="plus"
                                           Class="button-border-success"
                                           title="Add New Address">
                                Add Address
                            </TelerikButton>
                        }
                    </GridLayoutItem>
                    <GridLayoutItem>
                        <PhonesEditor PhonesToAdd="@OrganizationToAdd?.Phones" FormMode="FormMode.Add"></PhonesEditor>
                    </GridLayoutItem>
                    <GridLayoutItem>
                        <EmailsEditor EmailsToAdd="@OrganizationToAdd?.Emails" FormMode="FormMode.Add"></EmailsEditor>
                    </GridLayoutItem>
                </GridLayoutItems>
            </TelerikGridLayout>
        </EditForm>

        <div class="pt-4">
            <EditFormButtons CloseEventCallback="EndAddAsync"
                             SaveEventCallback="HandleAddSubmit">
            </EditFormButtons>
        </div>
    }

    @if (EditingOrganization && OrganizationToEdit != null)
    {
        <EditForm class="ui form"
                  Model="@OrganizationToEdit"
                  OnSubmit="HandleUpdateSubmit">

            <OrganizationEditor TItem="OrganizationToEdit"
                                Item="@OrganizationToEdit"
                                NameProperty="Name"
                                NoteProperty="Note" />

            <TelerikGridLayout>
                <GridLayoutColumns>
                    <GridLayoutColumn Width="30%"></GridLayoutColumn>
                    <GridLayoutColumn Width="35%"></GridLayoutColumn>
                    <GridLayoutColumn Width="35%"></GridLayoutColumn>
                </GridLayoutColumns>
                <GridLayoutRows>
                    <GridLayoutRow></GridLayoutRow>
                </GridLayoutRows>
                <GridLayoutItems>
                    <GridLayoutItem>
                        <div class="h6"
                             tabindex="-1"
                             @onclick="EditAddress">
                            Address
                            &nbsp &nbsp
                            @if (OrganizationToEdit?.Address != null)
                            {
                                <TelerikIcon Icon="pencil"/>
                            }
                        </div>
                        @if (OrganizationToEdit?.Address != null)
                        {

                            <TelerikWindow Visible="OrganizationToEdit?.Address != null && EditingAddress"
                                           Modal="true">
                                <WindowTitle>
                                    Address
                                </WindowTitle>
                                <WindowContent>
                                    <AddressEditor TItem="AddressToEdit"
                                                   Item="@OrganizationToEdit?.Address"
                                                   AddressLineProperty="AddressLine"
                                                   CityProperty="City"
                                                   StateProperty="State"
                                                   PostalCodeProperty="PostalCode"
                                                   EnableEditor="EditingAddress" />

                                    <TelerikButton OnClick="() => EditingAddress = false"
                                                   Icon="check"
                                                   Primary="true"
                                                   ButtonType="ButtonType.Button"
                                                   title="Save New Address">
                                        Okay
                                    </TelerikButton>
                                    <TelerikButton OnClick="CancelEditAddress"
                                                   ButtonType="ButtonType.Button"
                                                   Icon="x"
                                                   title="Cancel Edit Address">
                                        Cancel
                                    </TelerikButton>
                                </WindowContent>
                            </TelerikWindow>
                        }
                        else
                        {
                            <TelerikButton OnClick="() => OrganizationToEdit.Address = new()"
                                           Icon="plus"
                                           Class="button-border-success"
                                           title="Add New Address">
                                Add Address
                            </TelerikButton>
                        }

                        @if (OrganizationToEdit?.Address != null && !EditingAddress)
                        {
                            <div @onclick="EditAddress">
                                <AddressEditor TItem="AddressToEdit"
                                               Item="@OrganizationToEdit?.Address"
                                               AddressLineProperty="AddressLine"
                                               CityProperty="City"
                                               StateProperty="State"
                                               PostalCodeProperty="PostalCode"
                                               EnableEditor="EditingAddress" />
                            </div>
                        }
                    </GridLayoutItem>
                    <GridLayoutItem>
                        <PhonesEditor PhonesToEdit="@OrganizationToEdit?.Phones" FormMode="FormMode.Edit"></PhonesEditor>
                    </GridLayoutItem>
                    <GridLayoutItem>
                        <EmailsEditor EmailsToEdit="@OrganizationToEdit?.Emails" FormMode="FormMode.Edit"></EmailsEditor>
                    </GridLayoutItem>
                </GridLayoutItems>
            </TelerikGridLayout>

            <EditFormButtons CloseEventCallback="EndEditAsync"></EditFormButtons>
        </EditForm>
    }
</div>
